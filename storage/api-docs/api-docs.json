{
    "openapi": "3.0.0",
    "info": {
        "title": "Awards Management API",
        "description": "API for managing awards, nominees, voting, and events",
        "contact": {
            "email": "admin@example.com"
        },
        "license": {
            "name": "Apache 2.0",
